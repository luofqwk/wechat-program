/* pages/review-list/review-list.wxss */
.container {
    padding: 20rpx;
    background-color: #f5f5f5;
  }
  
  .item {
    background-color: #fff;
    border-radius: 12rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .name {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
  }
  
  .time {
    font-size: 24rpx;
    color: #999;
  }
  
  .content {
    display: flex;
    flex-wrap: wrap;
    gap: 10rpx;
  }
  
  .label {
    font-size: 28rpx;
    color: #666;
  }
  
  .value {
    font-size: 28rpx;
    color: #333;
  }
  
  .loading, .no-more {
    text-align: center;
    font-size: 28rpx;
    color: #999;
    padding: 20rpx 0;
  }